Bootstrap: docker
From: ubuntu:16.04

%labels
  Author Amin Haeri

%post
  apt-get update --fix-missing
  apt-get install -yq \
    cmake \
    curl \
    g++ \
    git \
    graphviz-dev \
    libcfitsio-dev \
    libfftw3-dev \
    libftgl-dev \
    libglew-dev \
    libglu1-mesa-dev \
    libgsl-dev \
    libjpeg-dev \
    libkrb5-dev \
    libldap2-dev \
    libmysqlclient-dev \
    libpcre3-dev \
    libpng-dev \
    libqt4-dev \
    libqt4-opengl-dev \
    libssl-dev \
    libtbb-dev \
    libx11-dev \
    libxext-dev \
    libxft-dev \
    libxi-dev \
    libxml2-dev \
    libxmu-dev \
    libxpm-dev \
    libxt-dev \
    make \
    python-dev \
    rsync \
    tcl \
    wget \
    vim\
    language-pack-en

  apt-get install -y python3-dev git build-essential cmake make g++ libx11-dev
  pip install subprocess

  apt-get clean
  apt-get autoclean
  rm -rf /var/lib/apt/lists/*

  cd ~
  wget https://github.com/haeriamin/files/blob/master/installTaichi.py
  python3 installTaichi.py

  wget https://github.com/haeriamin/files/blob/master/main.py
  yes | cp -rf ~/main.py ~/taichi/python/taichi
  cd ~
  rm -fr main.py

  cd ~/taichi/python/taichi
  source ~/.bashrc
  ti install mpm
  source ~/.bashrc
